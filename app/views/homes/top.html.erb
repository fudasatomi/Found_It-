<div class="row">
		<div class="col-xs-12">
			<%= render 'recipes/category', categories: @category_list %>
			<div class="col-xs-8">
				<article class="fovo_rank">
					<div class="row favo_rank_contents">
						<h3>いいね数ランキング</h3>
						<div class="favo_rank_recipes">
							<% @favorite_rank.each.with_index(1) do |recipe, idx| %>
								<div class="favo_recipe_div">
									<p><%= idx %></p>
									<%= link_to recipe do %>
									<%= attachment_image_tag recipe, :image, :fill, 180, 120,format: "jpeg" , fallback: "no_image.jpg", size: "180x120" %><br>
									<%= recipe.title %>
									<p class="favo_heart"><span class="glyphicon glyphicon-heart"></span>
									<%= recipe.favorites.count %></p>
									<% end %>
								</div>
							<% end %>
						</div>
					</div>
				</article>
				<article  class="update_recipe_rank">
					<div class="row update_recipe_contents">
						<h3>
							新しい投稿レシピ</h3>
						<p><%= link_to "＞＞もっと見る", recipes_path %></p>
						<div class="recipe_index">
						<% if @new_recipe.present? %>
							<% @new_recipe.each do |recipe| %>
								<div class="recipe_div">
									<%= link_to recipe_path(recipe) do %>
										<%= attachment_image_tag recipe, :image, :fill, 180, 120,format: "jpeg" , fallback: "no_image.jpg", size: "180x120" %><br>
										<%= recipe.title %>			<% end %>
									<p class="favo_heart">
										<span class="glyphicon glyphicon-heart"></span>
										<%= recipe.favorites.count %>
									<% if recipe.is_closed != false%>
									<%= recipe.if_is_closed %><% end %>
									</p>
								</div>
							<% end %>
						<% else %>
							<div class="recipe_no_message" align="center">投稿レシピはありません</div>
						<% end %>
					</div>
					</div>
				</article>
			</div>
		</div>
	</div>
